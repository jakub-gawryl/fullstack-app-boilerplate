{
  "name": "fullstack-app-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for express + React apps",
  "author": "Jakub Gawryl",
  "license": "ISC",
  "engines": {
    "node": ">=0.14.18 <15"
  },
  "scripts": {
    "dev": "npm-run-all -nl dev:backend dev:frontend",
    "test": "npm-run-all -nl test:backend test:frontend",
    "build": "npm-run-all -nl build:backend build:frontend",
    "postinstall": "npm-run-all -nl install:backend install:frontend",
    "install:frontend": "cd frontend && yarn install",
    "install:backend": "cd backend && yarn install",
    "dev:frontend": "cd frontend && yarn run start",
    "dev:backend": "cd backend && yarn run dev",
    "test:frontend": "cd frontend && yarn run test",
    "test:backend": "cd backend && yarn run test",
    "build:frontend": "cd frontend && yarn run build",
    "build:backend": "cd backend && yarn run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
